<%= form_with model: @user , url: user_login_path(@user) , html: { class: "ui form" }, method: :get do |form| %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>

  <div class="actions">
    <%= form.submit class: "ui primary button" , name: 'login' %>
  </div>
<% end %>

