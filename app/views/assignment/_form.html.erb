<%= form_with(model: assignment , id: 'edit', html: { class: "ui form" }) do |form| %>

  <div class="field">
    <%= form.label :mark %>
    <%= form.text_field :mark, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :comments %>
    <%= form.text_area :comments %>
  </div>

  <div class="actions">
    <%= form.submit class: "ui primary button" , name: 'submit' %>
  </div>
<% end %>